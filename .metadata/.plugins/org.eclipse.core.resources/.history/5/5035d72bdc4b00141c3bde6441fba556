import java.util.List;

public class PlanetSystem 
{
	private short Id;
	private List<Planet> planets;
	private Border[] internalBorders;

	public short getId() 
	{
		return Id;
	}

	public List<Planet> getPlanets() 
	{
		return planets;
	}
	
	public void addPlanets(Planet planet) 
	{
		planets.add(planet);
	}	

	public void setId(short id) 
	{
		Id = id;
	}
}