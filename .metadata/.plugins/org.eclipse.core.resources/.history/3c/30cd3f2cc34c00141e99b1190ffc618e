import java.util.List;

public class War {

	private static War instance;
	
	private GameScreenPresenter presenter;
	private Board board; 
	private List<Player> players;

	private War() {
		GameScreenPresenter presenter = new GameScreenPresenter(new GameState(new PlanetRepository()));
		
		presenter.show();
	}

	public static War getInstance() {
		if (instance == null)
			instance = new War();
		return instance;
	}
	
	public Board getBoard(){
		return this.board;
	}
	
	public List<Player> getPlayers() 
	{
		return players;
	}

}
