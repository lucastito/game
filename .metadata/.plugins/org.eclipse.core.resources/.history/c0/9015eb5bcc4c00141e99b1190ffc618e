	public static War getInstance() {
		if (instance == null)
			instance = new War();
		return instance;
	}
	
	public void nextPlayer()
	{
		playingIdsOrder.add(playingIdsOrder.remove(0));
	}
	
	public int currentPlayerId()
	{
		return playingIdsOrder.get(0);
	}
	
	public String getNameById(int id)
