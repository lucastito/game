import junit.framework.TestCase;

import java.util.List;

public class PlanetRepositoryTests extends TestCase
{
	PlanetRepository planetRepository;
	
	protected void setUp() throws Exception 
	{
		planetRepository = new PlanetRepository();
	}
	
	public void getNeighborPlanets_GetsAllNeighbors()
	{
		
	}
	
	public void When_PlanetNameIsEmpty_ReturnsNull()
	{
		List<Planet> result = planetRepository.getNeighborPlanets("");		
		assertEquals(result, null);
	}
	
	public void When_PlanetNameIsNull_ReturnsNull()
	{
		List<Planet> result = planetRepository.getNeighborPlanets(null);	
		assertEquals(result, null);		
	}
	
	public void When_PlanetNameIsWrong_ReturnsNull()
	{
		List<Planet> result = planetRepository.getNeighborPlanets("Marte");		
		assertEquals(result, null);
	}
}
